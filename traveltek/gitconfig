[user]
	name = Dan Stewart
	email = daniel@traveltek.net
[push]
	default = current
[core]
	filemode = false
	pager = diff-so-fancy | less --tabs=4 -RFX
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[alias]
	st = status
	co = checkout
	cm = !git add -A && git commit -m
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

	# Checkout a branch from develop
	cod = "!git checkout -b feature_${1} develop; #"

	# Undo a commit
	undo = reset HEAD~1 --mixed

	# Amend an unpushed commit message
	amend = commit -a --amend

	# Wipe out everything you've done
	wipe = reset --hard

	# Fetch branch from remote and cleanup any dead ones
	# Then delete any local feature branches
	cleanup = !git fetch --prune --all && git branch | grep "feature_*" | xargs --no-run-if-empty git branch -D 
