alias py3='python3'
alias gpg='gpg2'
alias more='less'

if command -v colordiff >/dev/null 2>&1; then
	alias diff='colordiff'
fi

if [[ $(type -P podman) && ! $(type -P docker) ]]; then
	alias docker='podman'
	alias docker-compose='podman-compose'
fi

# Vim
if command -v nvim >/dev/null 2>&1; then
	alias vi='nvim'
	alias vim='nvim'
	alias view='nvim -R'
else
	alias vi='vim'
	alias view='vim -R'
fi

