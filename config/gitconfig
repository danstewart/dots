[user]
	name = Dan Stewart
	email = git@mail.danstewart.dev

[push]
	default = current

[core]
	filemode = false
	pager = delta
	editor = vim

[delta]
	features = decorations

[delta "decorations"]
	commit-decoration-style       = blue ol
	commit-style                  = raw
	file-style                    = bright-yellow
	hunk-header-style             = bold syntax
	minus-style                   = bold red
	minus-non-emph-style          = bold red
	minus-emph-style              = bold red 52
	minus-empty-line-marker-style = normal "#3f0001"
	zero-style                    = normal
	plus-style                    = bold green
	plus-non-emph-style           = bold green
	plus-emph-style               = bold green 22
	plus-empty-line-marker-style  = normal "#002800"
	grep-file-style               = purple
	grep-line-number-style        = green
	whitespace-error-style        = reverse purple
	blame-palette                 = "#000000 #222222 #444444"
	true-color                    = always
	file-added-label              = 'added:'
	file-modified-label           = ''
	file-removed-label            = 'removed:'
	file-renamed-label            = 'renamed:'
	right-arrow                   = '‚ü∂  '
	hyperlinks                    = false
	inspect-raw-lines             = true
	keep-plus-minus-markers       = true
	line-numbers                  = true
	line-numbers-minus-style      = 88
	line-numbers-zero-style       = "#444444"
	line-numbers-plus-style       = 28
	line-numbers-left-style       = blue
	line-numbers-right-style      = blue
	max-line-distance             = 0.6
	max-line-length               = 512
	diff-stat-align-width         = 48
	navigate                      = false
	navigate-regex                =
	paging                        = auto
	side-by-side                  = true
	syntax-theme                  = Monokai Extended
	tabs                          = 4

[interactive]
    diffFilter = delta --color-only --features=interactive

[color]
	ui = true

[merge]
	conflictstyle = zdiff3

[alias]
	st = status
	co = checkout
	cm = !git add -A && git commit -m
	undo = reset HEAD~1 --mixed
	amend = commit -a --amend
	wipe = reset --hard
    difft = !GIT_EXTERNAL_DIFF=difft git diff
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	cleanup = ! "git fetch -p && git for-each-ref --format '%(refname:short) %(upstream:track)' | awk '$2 == \"[gone]\" {print $1}' | xargs -r git branch -D"
	# Update current branch with all changes in trunk
	up-trunk = ! "git fetch origin trunk:trunk && git rebase -i trunk"
	# Squash all commits on PR
	squash = ! "git reset --soft $(git merge-base $(git def-branch) HEAD) && git commit"
	# As above but rebases all commits on PR
	rb-squash = ! "git rebase -i $(git merge-base feature $(git def-branch))"
	# Get the default branch name (eg. main/master/trunk)
	def-branch = ! "git remote show origin | grep 'HEAD branch' | cut -d' ' -f5"
	# Find all todo comments on the current branch that are not in main
	todo= ! "git diff $(git def-branch).. | grep '^+.*TODO'"
	# Update a fork
	update-fork = ! "git fetch upstream && git checkout main && git rebase upstream/main"
	# Add all changes onto the last commit and force push
	shove = ! "git add -A . && git commit --amend --no-edit && git push -f"

[diff]
	algorithm = histogram

[pull]
	rebase = false

[init]
	defaultBranch = main

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[url "git@github.com:"]
	insteadOf = "https://github.com/"
